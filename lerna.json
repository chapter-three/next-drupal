{
  "version": "independent",
  "packages": ["packages/*", "examples/*", "modules/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "loglevel": "success",
  "registry": "https://registry.npmjs.org/",
  "ignoreChanges": [
    "CHANGELOG.md",
    "**/__tests__/**",
    "**/__mocks__/**",
    "drupal/**"
  ],
  "command": {
    "create": {
      "license": "MIT"
    },
    "run": {
      "loglevel": "verbose"
    },
    "publish": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  }
}
