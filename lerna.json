{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "yarn",
  "packages": ["packages/*", "examples/*", "starters/*", "modules/*"],
  "ignoreChanges": [
    "CHANGELOG.md",
    "**/__tests__/**",
    "**/__mocks__/**",
    "drupal/**"
  ],
  "command": {
    "create": {
      "license": "MIT"
    },
    "run": {
      "loglevel": "verbose"
    },
    "publish": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  }
}
